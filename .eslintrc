{
    "parser": "babel-eslint",
    "rules": {
        "quotes": [2, "single", "avoid-escape"],
        "no-use-before-define": [2, "nofunc"]
    },
    "env": {
        "node": true,
        "browser": true
    },
    "globals": {
        "angular": true,
        "_": true,
        "describe": true,
        "beforeEach": true,
        "it": true,
        "inject": true,
        "expect": true
    }
}
