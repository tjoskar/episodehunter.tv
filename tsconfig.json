{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "compileOnSave": false,
    "exclude": [
        ".tmp",
        "dist",
        "log",
        "node_modules",
        "tests"
    ]
}
