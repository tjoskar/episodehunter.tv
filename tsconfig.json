{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "exclude": [
        ".tmp",
        "dist",
        "log",
        "node_modules",
        "tests"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./src/custom-typings.d.ts",
        "./typings/index.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "resolveGlobs": true,
        "forkChecker": true,
        "cacheDirectory": "node_modules/.awesome-typescript-loader-cache"
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false }
}
